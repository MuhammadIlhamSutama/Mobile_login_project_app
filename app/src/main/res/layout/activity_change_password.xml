<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Top bar -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#00A9A5"
        android:padding="12dp"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/easy_tapp_logo"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/buttonClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textColor="@android:color/white"
            android:background="@drawable/red_rounded_button"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"/>



    </RelativeLayout>

    <!-- Illustration (replace with ImageView if you have an image asset) -->
    <ImageView
        android:layout_width="143dp"
        android:layout_height="171dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:src="@drawable/secure_illustration" />

    <!-- Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change your Password"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID:"
            android:textStyle="bold"
            android:textSize="38sp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/editTextClientId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint=""
            android:textColorHint="@color/black"
            android:inputType="none"
            android:enabled="false"
            android:focusable="false"

            android:textSize="30sp"/>

    </LinearLayout>


    <!-- Password fields -->

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/dashed_line"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <EditText
        android:id="@+id/editTextOldPassword"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/gray_rounded_edittext"
        android:hint="old password"
        android:inputType="textPassword"

        android:paddingStart="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp">

        <EditText
            android:id="@+id/editTextNewPassword"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="46dp"
            android:hint="new password"
            android:textSize="17sp"
            android:inputType="textPassword"
            android:background="@drawable/gray_rounded_edittext"
            android:paddingStart="10dp"/>

        <Space
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/editTextConfirmPassword"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="46dp"
            android:textSize="17sp"
            android:hint="Confirm same pass"
            android:inputType="textPassword"
            android:background="@drawable/gray_rounded_edittext"
            android:paddingStart="10dp"/>
    </LinearLayout>

    <!-- Submit Button -->
    <Button
        android:id="@+id/buttonUpdatePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Password"
        android:layout_margin="24dp"
        android:textColor="@android:color/white"
        android:background="@drawable/teal_rounded_button" />

</LinearLayout>
