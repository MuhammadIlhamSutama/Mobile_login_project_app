<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    > <!-- Semi transparan background -->


    <!-- Konten toast -->
    <LinearLayout
        android:layout_width="421dp"
        android:layout_height="450dp"
        android:orientation="vertical"
        android:background="@drawable/notif_bawah"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:padding="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/cancelin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Login Failed"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="Sorry! we cannot find your id or your \n password is incorrect."
            android:textAlignment="center"
            android:textColor="#555555"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnClose"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ligth_green"
            android:text="@string/back" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
